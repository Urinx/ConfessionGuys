.men_canvas {
	width: 100%;
	margin: 0;
}
.btn {
	margin: 7% 25%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}
.img_btn {
	margin: 0;
	padding: 0;
	background-color: rgba(0,0,0,0);
	height: 100rpx;
}
.img_btn::after {
	border: none;
}
.img_btn image {
	width: 100rpx;
	height: 100rpx;
}
.make_new {
	margin: 0 -15%;
	width: 130%;
}

.container {
	padding: 0;
}
.bgcolor_selector {
	display: flex;
	width: 100%;
	height: 50px;
	position: absolute;
	bottom: 10px;
}
.bgcolor_selector div {
	display: block;
	float: left;
	width: 50px;
	height: 50px;
	margin: auto;
	border-radius: 50%;
}